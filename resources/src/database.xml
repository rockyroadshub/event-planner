<database>
    <tables>
        <table>
            <name>EVENTS</name>
            <columns>
                <column name="EVENT_ID" 
                type="INT NOT NULL PRIMARY KEY GENERATED ALWAYS AS IDENTITY (START WITH 1, INCREMENT BY 1)"/>
                <column name="EVENT"       type="VARCHAR(${properties.length.event})"/>
                <column name="DESCRIPTION" type="VARCHAR(${properties.length.description})"/>   
                <column name="LOCATION"    type="VARCHAR(${properties.length.location})"/>  
                <column name="EVENT_DATE"  type="DATE"/>        
                <column name="EVENT_YEAR"  type="VARCHAR(10)"/>
                <column name="EVENT_MONTH" type="VARCHAR(20)"/>
                <column name="EVENT_DAY"   type="VARCHAR(10)"/>
                <column name="EVENT_START" type="TIME"/>
                <column name="EVENT_END"   type="TIME"/>      
            </columns>          
            <displays>
                <display name="ID"         attr="EVENT_ID"/>
                <display name="Title"      attr="EVENT"/>
                <display name="Date"       attr="EVENT_DATE" />
                <display name="Start Time" attr="EVENT_START"/>
                <display name="End Time"   attr="EVENT_END" />
            </displays>           
            <properties>
                <length>
                    <event>50</event>
                    <description>500</description>
                    <location>250</location>
                </length>
            </properties>
        </table>
    </tables> 
</database>
